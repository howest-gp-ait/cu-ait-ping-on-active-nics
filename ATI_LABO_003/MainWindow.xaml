<Window x:Class="ATI_LABO_003.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATI_LABO_003"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Actieve NIC's : " HorizontalAlignment="Left" Height="25" Margin="20,10,0,0" VerticalAlignment="Top" Width="138"/>
        <ComboBox x:Name="cmbNics" HorizontalAlignment="Left" Margin="20,40,0,0" VerticalAlignment="Top" Width="225" SelectionChanged="CmbNics_SelectionChanged"/>
        <Label Content="selecteer een NIC om test uit te voeren" HorizontalAlignment="Left" Height="24" Margin="20,67,0,0" VerticalAlignment="Top" Width="225" FontStyle="Italic" Foreground="Silver"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Disabled" Margin="290,40,10,10">
            <TextBlock x:Name="tbkInfo" HorizontalAlignment="Left" Margin="0,0,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        </ScrollViewer>
    </Grid>
</Window>
